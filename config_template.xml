<?xml version='1.0' encoding='utf-8'?>
<widget android-packageName="[ANDROID-BUNDLE-ID]" ios-CFBundleIdentifier="[IOS-BUNDLE-ID]" version="[APP-VERSION]">
    <author email="brian.g.grieco@gmail.com.com">
        MEDICAL EGUIDES
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <name>[ANDROID-NAME]</name>
        <description>
            [ANDROID-DESCRIPTION]
        </description>
        <allow-intent href="market:*" />
        <preference name="Orientation" value="portrait" />
        <preference name="android-manifest/application/activity/@android:theme" value="@android:style/Theme.Holo.Light" />
    </platform>
    <platform name="ios">
        <name>[IOS-NAME]</name>
        <description>
            [IOS-DESCRIPTION]
        </description>
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#d3d3d3" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="Orientation" value="portrait" />
        <preference name="DisallowOverscroll" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.2.1" />
</widget>
